{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "noStrictGenericChecks": true,    
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5"
  },
  "include": [
    "custom-typings.d.ts",
    "src/**/*.ts"
  ],
  "paths": {
    "@app/env": [
      "environments/environment"
    ]
  },  
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}